<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_passphrase"
        android:text="@string/default_passphrase_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:layout_alignParentTop="true"/>

    <!--Todo: use the preferenece framework-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_generate_passphrase"
        android:stretchColumns="0">

        <TableRow>

            <TextView
                android:text="@string/passphrase_delimiter_label"
                android:labelFor="@+id/delimiter_edit_text"/>

            <EditText
                android:id="@id/delimiter_edit_text"
                android:inputType="text"
                android:text="@string/passphrase_default_delimiter"
                android:ems="2"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow>

            <TextView
                android:text="@string/passphrase_num_words_label"
                android:labelFor="@+id/num_words_edit_text"/>

            <EditText
                android:id="@id/num_words_edit_text"
                android:inputType="number"
                android:text="@string/passphrase_default_num_words"
                android:ems="2"
                android:textAlignment="center"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/force_cap_text"
                android:text="@string/passphrase_force_capitalised_label"
                android:layout_gravity="center_vertical"/>

            <CheckBox
                android:id="@+id/force_cap_checkbox"
                android:layout_gravity="center"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@id/button_generate_passphrase"
        android:text="@string/generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_spacer"/>

    <Space
        android:id="@id/password_spacer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>